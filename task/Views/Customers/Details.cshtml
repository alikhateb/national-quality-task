@model CustomerWithProductsQueryResult

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var index = 0;
}

<h2>Details</h2>

<div class="mb-3 row">
    <label for="@nameof(CustomerWithProductsQueryResult.CustomerName)" class="col-sm-2 col-form-label">@nameof(CustomerWithProductsQueryResult.CustomerName).Humanize()</label>
    <div class="col-sm-10">
        <input type="text" disabled readonly class="form-control" id="@nameof(CustomerWithProductsQueryResult.CustomerName)" value="@Model.CustomerName">
    </div>
</div>

<div class="mb-3 row">
    <label for="@nameof(CustomerWithProductsQueryResult.CustomerCode)" class="col-sm-2 col-form-label">@nameof(CustomerWithProductsQueryResult.CustomerCode).Humanize()</label>
    <div class="col-sm-10">
        <input type="text" disabled readonly class="form-control" id="@nameof(CustomerWithProductsQueryResult.CustomerCode)" value="@Model.CustomerCode">
    </div>
</div>

<div class="mb-3 row">
    <label for="@nameof(CustomerWithProductsQueryResult.DateOfRegistration)" class="col-sm-2 col-form-label">@nameof(CustomerWithProductsQueryResult.DateOfRegistration).Humanize()</label>
    <div class="col-sm-10">
        <input type="text" disabled readonly class="form-control" id="@nameof(CustomerWithProductsQueryResult.DateOfRegistration)" value="@Model.DateOfRegistration">
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@nameof(CustomerWithProductsQueryResult.ProductResult.ProductName).Humanize()</th>
            <th scope="col">@nameof(CustomerWithProductsQueryResult.ProductResult.Price).Humanize()</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <th scope="row">@(++index)</th>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
            </tr>
        }

    </tbody>
</table>
@model List<CustomerWithProductsQueryResult>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between">
    <h2>Customers</h2>
    <a asp-controller="Customers" asp-action="Add">
        <button type="button" class="btn btn-primary">Add</button>
    </a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@nameof(CustomerWithProductsQueryResult.CustomerName).Humanize()</th>
            <th scope="col">@nameof(CustomerWithProductsQueryResult.CustomerCode).Humanize()</th>
            <th scope="col">@nameof(CustomerWithProductsQueryResult.DateOfRegistration).Humanize()</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <th scope="row">@customer.CustomerId</th>
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerCode</td>
                <td>@customer.DateOfRegistration.ToString("dd-MM-yyyy")</td>
                <td>
                    <a asp-controller="Customers" asp-action="Details" asp-route-id="@customer.CustomerId">
                        <button type="button" class="btn btn-secondary">Details</button>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
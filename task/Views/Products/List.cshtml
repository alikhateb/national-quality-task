@model List<ProductQueryResult>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between">
    <h2>Products</h2>
    <a asp-controller="Products" asp-action="Add">
        <button type="button" class="btn btn-primary">Add</button>
    </a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@nameof(ProductQueryResult.Name).Humanize()</th>
            <th scope="col">@nameof(ProductQueryResult.Price).Humanize()</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }

    </tbody>
</table>